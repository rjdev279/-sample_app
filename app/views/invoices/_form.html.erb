<%= form_for @invoice, html: { class: 'w-100' } do |f| %>
  <div class="columns">
    <%= f.label :client_name, class: 'label' %>
    <%= f.text_field :client_name, class: 'field', required: true, placeholder: 'Enter Client Name' %>
  </div>

  <div class="columns">
    <%= f.label :amount, 'Amount($)', class: 'label' %>
    <%= f.number_field :amount, class: 'field', required: true, min: 0, step: 0.01 %>
  </div>

  <div class="columns">
    <%= f.label :tax, 'Tax(%)', class: 'label' %>
    <%= f.number_field :tax, class: 'field', min: 0, step: 0.01, placeholder: '%' %>
  </div>

  <div class="columns">
    <%= f.submit class: 'button button-primary' %>
    <%= link_to 'Cancel', invoices_path, class: 'button button-secondary' %>
  </div>
<% end %>
